%h1
  = render partial: "common/back", locals: {path: anunciante_contratos_path}
  Nuevo contrato
%h3
  en el anunciante
  = link_to @anunciante.nombre, @anunciante

= form_for [:anunciante, @contrato], url: anunciante_contratos_path, html: {class: "pure-form"} do |f|
  %p
    = f.text_area :descripcion, placeholder: "Descripción"
  %p
    = f.label :fecha, "Fecha creación"
    = f.date_select :fecha

  %p
    = f.label :fecha, "Fecha finalización"
    = f.date_select :duracion

  %p
    = f.text_field :importe, placeholder: "Importe"

  %p
    = f.submit "Crear contrato", class: "pure-button pure-button-primary"
