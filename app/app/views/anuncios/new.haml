%h1
  = render partial: "common/back", locals: {path: anunciante_anuncios_path}
  Nuevo anuncio
%h3
  del anunciante
  = link_to current_anunciante.nombre, current_anunciante

= form_for [:anunciante, @anuncio], url: anunciante_anuncios_path, html: {class: "pure-form"} do |f|
  %p
    = f.text_field :contenido, placeholder: "Contenido"

  %p
    = f.text_field :url, placeholder: "URL"

  %p
    = f.submit "Crear anuncio", class: "pure-button pure-button-primary"
